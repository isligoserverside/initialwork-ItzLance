<form method="POST">
    <div class="form-group">
        <label for='firstname'>First Name</label>
        <input type=text id='firstname' name='firstname' class='form-control'>
    </div>
    <div class="form-group">
        <label for='surname'>Surname</label>
        <input type=text id='surname' name='surname' class='form-control'>

      <div class="col-auto my-1">
      <label class="mr-sm-2" for="number">Pick a number</label>
      <select class="custom-select mr-sm-2" name="selection" id="inlineFormCustomSelect">
        <option selected>Choose...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
        <option value="4">Four</option>
        <option value="5">Five</option>
      </select>
    </div>
  <div class="form-check">
  <input class="form-check-input" type="radio" name="radio" id="exampleRadios1" value="Cat Person" checked>
  <label class="form-check-label" for="exampleRadios1">
    Cat Person
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="radio" id="exampleRadios2" value="Dog Person">
  <label class="form-check-label" for="exampleRadios2">
    Dog Person
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="radio" id="exampleRadios3" value="Other">
  <label class="form-check-label" for="exampleRadios3">
    Other
  </label>
</div>
  <button type="submit" class="btn btn-lg btn-primary my-1" id="formbtn">Submit</button>
</form>

<h1>First Name:{{firstname}}</h1>
<h1> Last Name:{{surname}}</h1>
<h1>Your Number: {{selection}}</h1>
<h1>Your Choice: {{radio}}</h1>
